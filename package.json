{
  "name": "stylelint-config-team23-standard",
  "version": "1.0.0",
  "description": "Standard shareable config for stylelint at TEAM23",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "scss",
    "TEAM23"
  ],
  "author": "TEAM23",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/team23/stylelint-config-team23-standard"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "format": "prettier . --write",
    "prepare": "husky install",
    "lint:formatting": "prettier . --check",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "test": "jest",
    "watch": "jest --watch",
    "pretty-quick": "pretty-quick"
  },
  "dependencies": {
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0"
  },
  "devDependencies": {
    "@stylelint/remark-preset": "^3.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.8.0",
    "eslint-config-stylelint": "^15.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "np": "^7.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "remark-cli": "^10.0.1",
    "stylelint": "^14.5.1"
  },
  "peerDependencies": {
    "stylelint": "^14.5.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,md,yml}": "prettier --write"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ],
    "globals": {
      "module": true,
      "require": true
    }
  },
  "remarkConfig": {
    "plugins": [
      "@stylelint/remark-preset"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
