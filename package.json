{
  "name": "stylelint-config-team23-standard",
  "version": "0.2.0",
  "description": "Standard shareable config for stylelint at TEAM23",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "scss",
    "TEAM23"
  ],
  "author": "TEAM23",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://git.team23.de/mmunz/stylelint-config-team23-standard"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "dependencies": {
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0"
  },
  "devDependencies": {
    "eslint": "^7.7.0",
    "eslint-config-stylelint": "^12.0.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "np": "^6.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "remark-cli": "^8.0.1",
    "remark-preset-lint-recommended": "^5.0.0",
    "remark-preset-prettier": "^0.4.0",
    "stylelint": "^13.7.2"
  },
  "peerDependencies": {
    "stylelint": "^10.1.0 || ^11.0.0 || ^12.0.0 || ^13.0.0"
  },
  "scripts": {
    "format": "prettier . --write",
    "lint:formatting": "prettier . --check",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "test": "jest",
    "watch": "jest --watch"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "remark-preset-prettier"
    ]
  }
}
